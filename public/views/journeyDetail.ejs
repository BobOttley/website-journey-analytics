<% if (journey.page_sequence && journey.page_sequence.length > 0) { %>
<!-- Page Sequence / Journey Flow -->
<div class="card">
  <h2>Journey Flow</h2>
  <div class="journey-flow" id="journeyFlow">
    <%
      let flowSessionNum = 1;
      let totalActiveTime = 0;
      journey.page_sequence.forEach((page, index) => {
        let flowGapSeconds = 0;
        let isFlowNewSession = false;
        if (index > 0) {
          const prevTime = new Date(journey.page_sequence[index-1].timestamp).getTime();
          const currTime = new Date(page.timestamp).getTime();
          flowGapSeconds = Math.round((currTime - prevTime) / 1000);
          if (flowGapSeconds > 300) {
            isFlowNewSession = true;
            flowSessionNum++;
          } else {
            totalActiveTime += flowGapSeconds;
          }
        }
    %>
      <% if (isFlowNewSession) { %>
        <div class="journey-flow-break">
          <span class="journey-flow-break-label">Session <%= flowSessionNum %></span>
        </div>
      <% } %>
      <div class="journey-flow-item">
        <div class="journey-flow-page <%= index === journey.page_sequence.length - 1 && (journey.outcome === 'enquiry_submitted' || journey.outcome === 'visit_booked') ? 'conversion' : '' %>"
             data-url="<%= page.url || '' %>"
             title="<%= new Date(page.timestamp).toLocaleTimeString('en-GB', { hour: '2-digit', minute: '2-digit', second: '2-digit' }) %>">
          <span class="page-icon"></span>
          <span class="page-name"></span>
        </div>
        <% if (index < journey.page_sequence.length - 1 && flowGapSeconds <= 300) { %>
          <span class="journey-flow-arrow">→</span>
        <% } %>
      </div>
    <% }); %>
  </div>
  <p class="text-small text-muted mt-4" style="text-align: center;">
    <%= journey.page_sequence.length %> pages across <%= flowSessionNum %> session<%= flowSessionNum !== 1 ? 's' : '' %>
  </p>
</div>
<% } %>

<script>
  function toggleHeartbeats() {
    const hideHeartbeats = document.getElementById('hideHeartbeats').checked;
    const heartbeatItems = document.querySelectorAll('[data-event-type="heartbeat"]');

    heartbeatItems.forEach(item => {
      if (hideHeartbeats) {
        item.classList.remove('show-heartbeat');
      } else {
        item.classList.add('show-heartbeat');
      }
    });

    // Re-layout the snake after toggling
    layoutSnakeTimeline();
  }

  function layoutSnakeTimeline() {
    const container = document.getElementById('eventTimeline');
    if (!container || !container.classList.contains('snake-timeline')) return;

    // Get all children (events and session breaks)
    const children = Array.from(container.children);

    // Process in sections separated by session breaks
    let currentOrder = 0;
    let eventIndexInSection = 0;
    const containerWidth = container.offsetWidth;
    const itemWidth = 180 + 38;
    const itemsPerRow = Math.max(2, Math.floor(containerWidth / itemWidth));

    children.forEach((child) => {
      if (child.classList.contains('session-break')) {
        // Session break takes full width and resets the row
        child.style.order = currentOrder;
        currentOrder++;
        eventIndexInSection = 0; // Reset for new section
      } else if (child.classList.contains('snake-event')) {
        const isHeartbeat = child.dataset.eventType === 'heartbeat';
        const showHeartbeat = child.classList.contains('show-heartbeat');

        if (isHeartbeat && !showHeartbeat) {
          child.style.order = currentOrder;
          return;
        }

        const rowIndex = Math.floor(eventIndexInSection / itemsPerRow);
        const isEvenRow = rowIndex % 2 === 1;
        const positionInRow = eventIndexInSection % itemsPerRow;

        // Calculate order within section
        let orderInSection;
        if (isEvenRow) {
          orderInSection = (rowIndex * itemsPerRow) + (itemsPerRow - 1 - positionInRow);
        } else {
          orderInSection = eventIndexInSection;
        }

        child.style.order = currentOrder + orderInSection;

        // Handle arrows
        const isLastInRow = positionInRow === itemsPerRow - 1;
        const arrow = child.querySelector('.snake-arrow');
        if (arrow) {
          if (isLastInRow) {
            arrow.style.display = 'none';
          } else {
            arrow.style.display = 'block';
            arrow.style.transform = isEvenRow ? 'rotate(180deg)' : 'rotate(0deg)';
          }
        }

        eventIndexInSection++;

        // Update currentOrder after completing a row
        if (positionInRow === itemsPerRow - 1) {
          currentOrder += itemsPerRow;
        }
      }
    });
  }

  document.addEventListener('DOMContentLoaded', () => {
    toggleHeartbeats();
    layoutSnakeTimeline();

    // Re-layout on window resize
    window.addEventListener('resize', layoutSnakeTimeline);

    // Populate friendly page names in journey flow
    document.querySelectorAll('.journey-flow-page').forEach(el => {
      const url = el.dataset.url;
      const iconEl = el.querySelector('.page-icon');
      const nameEl = el.querySelector('.page-name');
      if (iconEl) iconEl.textContent = getPageIcon(url);
      if (nameEl) nameEl.textContent = getPageName(url);
    });

    // Populate entry page link
    document.querySelectorAll('.entry-page-link').forEach(el => {
      const url = el.dataset.url;
      const displayEl = el.querySelector('.page-display');
      if (displayEl) {
        displayEl.innerHTML = `<span style="margin-right: 6px;">${getPageIcon(url)}</span>${getPageName(url)}`;
      }
    });

    // Populate snake timeline URLs with friendly names
    document.querySelectorAll('.snake-event-url').forEach(el => {
      const url = el.getAttribute('href');
      if (url) {
        el.textContent = getPageName(url);
      }
    });

    // Populate loop detection badges with friendly names
    document.querySelectorAll('.loop-badge').forEach(el => {
      const url = el.dataset.url;
      const nameEl = el.querySelector('.loop-name');
      if (nameEl && url) {
        nameEl.textContent = getPageName(url);
      }
    });
  });

  // AI Analysis functions
  async function analyseJourney() {
    const btn = document.getElementById('analyseBtn');
    const section = document.getElementById('analysisSection');
    const content = document.getElementById('analysisContent');

    // Show loading state
    btn.disabled = true;
    btn.textContent = 'Analysing...';
    section.style.display = 'block';
    content.innerHTML = '<div class="text-center"><p class="text-muted">Analysing journey with AI...</p></div>';

    try {
      const response = await fetch('/journeys/<%= journey.journey_id %>/analyse', {
        method: 'POST',
        headers: { 'Content-Type': 'application/json' }
      });

      const data = await response.json();

      if (!data.success) {
        throw new Error(data.error || 'Analysis failed');
      }

      // Display the analysis
      displayAnalysis(data.analysis);
      btn.textContent = 'Re-analyse';

    } catch (error) {
      console.error('Analysis error:', error);
      content.innerHTML = `<div class="text-center"><p class="text-muted" style="color: var(--danger);">Analysis failed: ${error.message}</p></div>`;
      btn.textContent = 'Try Again';
    } finally {
      btn.disabled = false;
    }
  }

  function displayAnalysis(analysis) {
    const content = document.getElementById('analysisContent');

    const engagementColour = {
      'high': 'var(--success)',
      'medium': 'var(--warning)',
      'low': 'var(--danger)'
    };

    const priorityBadge = {
      'high': 'badge-danger',
      'medium': 'badge-warning',
      'low': 'badge-neutral'
    };

    let html = `
      <div class="analysis-summary mb-4" style="background: var(--paper); padding: 16px; border-radius: 8px; border-left: 4px solid var(--accent);">
        <p style="font-size: 1.1rem; margin: 0;">${analysis.summary || 'No summary available'}</p>
      </div>

      <div class="grid-2 mb-4" style="gap: 16px;">
        <div style="background: var(--paper); padding: 16px; border-radius: 8px;">
          <h4 style="margin-bottom: 12px; font-size: 0.9rem; color: var(--text-muted);">Visitor Profile</h4>
          <p style="margin-bottom: 8px;"><strong>Likely Intent:</strong> ${analysis.visitorProfile?.likelyIntent || 'Unknown'}</p>
          <p style="margin-bottom: 8px;"><strong>Engagement:</strong> <span style="color: ${engagementColour[analysis.visitorProfile?.engagementLevel] || 'inherit'}">${analysis.visitorProfile?.engagementLevel || 'Unknown'}</span></p>
          <p style="margin: 0;"><strong>Buyer Stage:</strong> ${analysis.visitorProfile?.buyerStage || 'Unknown'}</p>
        </div>

        <div style="background: var(--paper); padding: 16px; border-radius: 8px;">
          <h4 style="margin-bottom: 12px; font-size: 0.9rem; color: var(--text-muted);">Follow-up Suggestion</h4>
          <p style="margin: 0;">${analysis.followUpSuggestion || 'No specific suggestion'}</p>
        </div>
      </div>
    `;

    // Positive signals
    if (analysis.positiveSignals?.length > 0) {
      html += `
        <div class="mb-4">
          <h4 style="color: var(--success); margin-bottom: 12px;">Positive Signals</h4>
          <ul style="margin: 0; padding-left: 20px;">
            ${analysis.positiveSignals.map(s => `<li style="margin-bottom: 6px;">${s}</li>`).join('')}
          </ul>
        </div>
      `;
    }

    // Concern signals
    if (analysis.concernSignals?.length > 0) {
      html += `
        <div class="mb-4">
          <h4 style="color: var(--warning); margin-bottom: 12px;">Concern Signals</h4>
          <ul style="margin: 0; padding-left: 20px;">
            ${analysis.concernSignals.map(s => `<li style="margin-bottom: 6px;">${s}</li>`).join('')}
          </ul>
        </div>
      `;
    }

    // Key moments
    if (analysis.keyMoments?.length > 0) {
      html += `
        <div class="mb-4">
          <h4 style="margin-bottom: 12px;">Key Moments</h4>
          <div style="display: flex; flex-direction: column; gap: 8px;">
            ${analysis.keyMoments.map(m => `
              <div style="background: var(--paper); padding: 12px; border-radius: 6px; border-left: 3px solid var(--accent);">
                <strong>${m.event}</strong>
                <p style="margin: 4px 0 0 0; font-size: 0.9rem; color: var(--text-muted);">${m.significance}</p>
              </div>
            `).join('')}
          </div>
        </div>
      `;
    }

    // Recommendations
    if (analysis.recommendations?.length > 0) {
      html += `
        <div>
          <h4 style="margin-bottom: 12px;">Recommendations</h4>
          <div style="display: flex; flex-direction: column; gap: 12px;">
            ${analysis.recommendations.map(r => `
              <div style="background: var(--paper); padding: 16px; border-radius: 8px;">
                <div style="display: flex; justify-content: space-between; align-items: center; margin-bottom: 8px;">
                  <strong>${r.action}</strong>
                  <span class="badge ${priorityBadge[r.priority] || 'badge-neutral'}">${r.priority} priority</span>
                </div>
                <p style="margin: 0; font-size: 0.9rem; color: var(--text-muted);">${r.reason}</p>
              </div>
            `).join('')}
          </div>
        </div>
      `;
    }

    content.innerHTML = html;
  }

  function toggleAnalysis() {
    const section = document.getElementById('analysisSection');
    const showBar = document.getElementById('showAnalysisBar');
    const toggleBtn = document.getElementById('toggleAnalysisBtn');

    if (section.style.display === 'none') {
      section.style.display = 'block';
      showBar.style.display = 'none';
      toggleBtn.textContent = 'Hide';
    } else {
      section.style.display = 'none';
      showBar.style.display = 'block';
    }
  }

  // Load existing analysis on page load
  <% if (existingAnalysis) { %>
  document.addEventListener('DOMContentLoaded', function() {
    const existingAnalysisData = <%- JSON.stringify(existingAnalysis.analysis) %>;
    displayAnalysis(existingAnalysisData);
  });
  <% } %>
</script>
